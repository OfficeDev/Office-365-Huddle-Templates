{
  "$schema": "https://statics.teams.microsoft.com/sdk/v1.7/manifest/MicrosoftTeams.schema.json",
  "manifestVersion": "1.7",
  "version": "1.0.0",
  "id": "<MicrosoftAppId>",
  "packageName": "com.canviz.huddle",
  "developer": {
    "name": "CANVIZ Consulting",
    "websiteUrl": "https://www.canviz.com/",
    "privacyUrl": "https://<MetricWebAppDomain>/tab/privacy",
    "termsOfUseUrl": "https://<MetricWebAppDomain>/tab/termsofuse"
  },
  "name": {
    "short": "Huddle App",
    "full": "Huddle App for Microsoft Teams"
  },
  "description": {
    "short": "This is a full sample manifest",
    "full": "This is an example of a fully populated Teams app manifest, using some data from the Teams sample app on Github."
  },
  "icons": {
    "outline": "huddle20x20.png",
    "color": "huddle96x96.png"
  },
  "accentColor": "#EBEBEB",
  "configurableTabs": [
    {
      "configurationUrl": "https://<MetricWebAppDomain>/tab/configure",
      "canUpdateConfiguration": true,
      "scopes": [
        "team"
      ]
    }
  ],
  "bots": [
    {
        "botId": "<MicrosoftAppId>",
        "scopes": [
            "personal"
        ],
        "supportsFiles": false,
        "isNotificationOnly": false
    }
],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "<MetricWebAppDomain>",
    "token.botframework.com"
  ]
}